.permalink {
  display: flex;
  align-items: center;
  font-size: 0.92rem;
}

.permalink input[type="text"] {
  margin-left: 10px;
  flex: 1 1 fit-content;
  padding: 0.2rem 10px;
  color: var(--text-color);
  background: var(--highlight-bg-color);
  border: 2px solid var(--highlight-bg-color);
  border-radius: 3px;
}
